def findMinAndMax(nums):
    max = min = nums[0]
    for i in range(1, len(nums)):
        if nums[i] > max:
            max = nums[i]
        elif nums[i] < min:
            min = nums[i]
 
    print('The minimum element in the list is', min)
    print('The maximum element in the list is', max)
 
 
if __name__ == '__main__':
 
    nums = [54,546,548,60]
    findMinAndMax(nums)
